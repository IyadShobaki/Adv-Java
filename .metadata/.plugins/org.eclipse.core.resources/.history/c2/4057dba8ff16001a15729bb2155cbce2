
public class SockMerchant {

	public static void main(String[] args) {
		
		//int[] ar = {10 ,20, 20, 10, 10, 30 ,50, 10, 20};
		//int n = 9;
		int[] ar = {1, 1 ,3, 1, 2 ,1 ,3 ,3 ,3, 3};
		int n = 10;
		System.out.println(sockMerchant(n, ar));
	}
	public static int sockMerchant(int n, int[] ar) {
		int count =0;
		
		boolean first = true;
		for(int i=0; i < n; i++) {
			int a =1;
			int b = 0;
			if(i+1 < n) {
				b= i+1;
			}
			int start =ar[i];
			if(i >0) {
				first = false;
			}
			if(first) {
				start = ar[0];
			}else {
				if(start == ar[b])
					continue;
				start = ar[b];
			}	
			for(int j =b; j < n; j++) {
				if(start == ar[j]) {
					a++;
				}
			}
			if(a % 2 ==0) {
				count += a;
			}
		}
	    
		return count/2;
	}
}
