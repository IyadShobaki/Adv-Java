//HackerRank 
public class CountingValleys {

	public static void main(String[] args) {
		
		System.out.println(countingValleys(8, "UDDDUDUU"));

	}
	 public static int countingValleys(int n, String s) {
	    
		int count =0;
		int val = 0;
		for(int i =0; i < n; i++) {
			if(s.charAt(i) == 'D') {
				count++;
			}else {
				count =0;
			}
			if(count == 3) {
				val++;
			}
		}
		 
		
		 
		 return 0;
	 }
}
